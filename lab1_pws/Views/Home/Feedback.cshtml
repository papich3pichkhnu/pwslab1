@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@inject Microsoft.Extensions.Options.IOptions<Microsoft.AspNetCore.Builder.RequestLocalizationOptions> locOptions
@{
    ViewData["Title"] = localizer["FeedbackTitle"];
}
<h1 class="text-center">@ViewData["Title"]</h1>
<div class="container">
    <form action="~/send-email" method="post">
        <div class="form-group">
            <label for="username">@localizer["YourName"]:</label>
            <input type="text" required name="ToName" class="form-control" id="username"/>            
        </div>

        <div class="form-group">
            <label for="useremail">@localizer["YourEmail"]:</label>
            <input type="email" required name="To" class="form-control" id="useremail"/>            
        </div>

        <div class="form-group">
            <label for="usermessage">@localizer["YourMessage"]:</label>
            <textarea required name="Body" class="form-control" id="useremail" rows=5>        
                </textarea>
        </div>

        <div class="form-group">
        <button type="submit" class="btn btn-success" name="go">@localizer["SendButton"]</button>
        </div>

    </form>
</div>